{
  "root": true,
  "ignorePatterns": [
    "**/*"
  ],
  "plugins": [
    "@nx",
    "eslint-plugin-prettier",
    "simple-import-sort"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        // to mitigate the CRLF errors in non-Unix environments
        "endOfLine": "auto"
      }
    ],
    "no-restricted-imports": [
      0, // TODO: Update this to "error" soon.
      {
        "paths": [
          {
            "name": "react",
            "importNames": [
              "default"
            ],
            "message": "Please destructure the default import: import { FC } from 'react';"
          }
        ]
      }
    ],
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          // react & nextjs packages come first
          ["^react$", "^next/"],
          // Side effect imports.
          ["^@?\\w", "^\\u0000"],
          // vestido packages
          ["^(@vestido-ecommerce)(/.*|$)"],
          // Internal packages (components, libs)
          ["^(@|modules|components|lib|layouts|types|utils)(/.*|$)"],
          // Parent imports. Put `..` last.
          // Other relative imports. Put same-folder imports and `.` last.
          ["^\\.\\.(?!/?$)", "^\\.\\./?$", "^\\./(?=.*/)(?!/?$)", "^\\.(?!/?$)", "^\\./?$"],
          // Style imports.
          ["^.+\\.?(css)$"]
        ]
      }
    ],
    "simple-import-sort/exports": "error"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": [
                  "*"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": [
        "plugin:@nx/typescript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "extends": [
        "plugin:@nx/javascript"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.spec.ts",
        "*.spec.tsx",
        "*.spec.js",
        "*.spec.jsx"
      ],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}